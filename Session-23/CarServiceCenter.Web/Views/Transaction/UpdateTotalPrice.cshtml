@model CarServiceCenter.Model.Transaction
@{
    ViewData["Title"] = "UpdateTotalPrice";
}

<h2>Update Total Price</h2>
<div>
    <h4>Transaction</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
    </dl>
    <hr />
    <h5>Transaction Lines</h5>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Hours
                </th>
                <th>
                    Price Per Hour
                </th>
                <th>
                    Price
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TransactionLines) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hours)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PricePerHour)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<form asp-action="UpdateTotalPrice">
            <div class="form-group">
                 <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
<div>
    <a asp-action="Index">Back to List</a>
</div>
